<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.UWCourseGuide.App">
        <item name="android:statusBarColor">@color/black</item>
    </style>
    <style name="Theme.App" parent="Theme.MaterialComponents">
        <item name="bottomNavigationStyle">@style/Widget.App.BottomNavigationView</item>
        <item name="android:statusBarColor">@color/black</item>
    </style>

    <style name="Widget.App.BottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView.Colored">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.BottomNavigationView</item>
    </style>

    <style name="ThemeOverlay.App.BottomNavigationView" parent="">
        <item name="colorPrimary">@color/red_translucent</item>
        <item name="colorOnPrimary">@color/black</item>
    </style>
    <style name="MyAlertDialogStyle" parent="ThemeOverlay.AppCompat.Dialog.Alert">
        <!-- Customize the color of the radio buttons -->
        <item name="android:colorControlActivated">@color/red_primary</item>
        <item name="android:textColorAlertDialogListItem">@color/black</item>
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
    </style>

    <style name="NegativeButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/red_primary</item>
    </style>

    <style name="PositiveButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/red_primary</item>
    </style>
</resources>